{
  "name": "cta-highlights",
  "version": "0.1.0",
  "description": "WordPress plugin for call-to-action highlights with customizable templates",
  "private": true,
  "scripts": {
    "env:start": "wp-env start",
    "env:stop": "wp-env stop",
    "env:clean": "wp-env clean",
    "test:setup": "wp-env run tests-cli --env-cwd=wp-content/plugins/cta-highlights bash tests/bin/install-wp-tests.sh wordpress_test root password tests-mysql latest true",
    "test:php": "wp-env run tests-cli --env-cwd=wp-content/plugins/cta-highlights vendor/bin/phpunit",
    "test:php:unit": "wp-env run tests-cli --env-cwd=wp-content/plugins/cta-highlights vendor/bin/phpunit --testsuite=unit",
    "test:php:integration": "wp-env run tests-cli --env-cwd=wp-content/plugins/cta-highlights vendor/bin/phpunit --testsuite=integration",
    "test:php:coverage": "wp-env run tests-cli --env-cwd=wp-content/plugins/cta-highlights vendor/bin/phpunit --coverage-html=coverage/php --coverage-text",
    "test:php:7.4": "bash bin/run-phpunit-version.sh 7.4",
    "test:php:8.1": "bash bin/run-phpunit-version.sh 8.1",
    "test:php:8.2": "bash bin/run-phpunit-version.sh 8.2",
    "test:js": "jest",
    "test:js:watch": "jest --watch",
    "test:js:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:chrome": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:safari": "playwright test --project=webkit",
    "test:visual": "playwright test tests/uat/visual-regression/",
    "test:visual:update": "playwright test tests/uat/visual-regression/ --update-snapshots",
    "test:visual:ui": "playwright test tests/uat/visual-regression/ --ui",
    "test:quick": "npm run test:php:unit && npm run test:js",
    "test:all": "npm run lint && npm run test:php && npm run test:js && npm run test:e2e",
    "test:coverage": "npm run test:php:coverage && npm run test:js:coverage",
    "ci:test": "npm run test:php && npm run test:js:coverage && npm run test:e2e:chrome",
    "lint:js": "eslint assets/js tests/javascript tests/e2e",
    "lint:php": "wp-env run cli --env-cwd=wp-content/plugins/cta-highlights vendor/bin/phpcs",
    "lint:phpstan": "wp-env run cli --env-cwd=wp-content/plugins/cta-highlights vendor/bin/phpstan analyse",
    "lint:fix:js": "eslint --fix assets/js tests/javascript tests/e2e",
    "lint:fix:php": "wp-env run cli --env-cwd=wp-content/plugins/cta-highlights vendor/bin/phpcbf",
    "lint:fix": "npm run lint:fix:js && npm run lint:fix:php",
    "lint": "npm run lint:js && npm run lint:php",
    "composer:install": "wp-env run cli --env-cwd=wp-content/plugins/cta-highlights composer install",
    "composer:update": "wp-env run cli --env-cwd=wp-content/plugins/cta-highlights composer update",
    "setup": "npm install && npm run composer:install",
    "setup:dev": "bash bin/setup-dev-environment.sh",
    "build": "echo 'No build step needed - plugin uses source files directly'",
    "build:zip": "bash bin/build-plugin-zip-docker.sh",
    "build:zip:local": "bash bin/build-plugin-zip.sh",
    "build:zip:verify": "bash bin/build-plugin-zip-docker.sh --verify",
    "release": "npm run lint && npm run test:all && npm run build:zip"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/cta-highlights"
  },
  "keywords": [
    "wordpress",
    "plugin",
    "cta",
    "call-to-action",
    "highlights"
  ],
  "author": "Standby CXO",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.40.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@wordpress/env": "^8.11.0",
    "@wordpress/eslint-plugin": "^17.6.0",
    "@wordpress/jest-console": "^7.21.0",
    "@wordpress/jest-preset-default": "^11.21.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-localstorage-mock": "^2.4.26"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
